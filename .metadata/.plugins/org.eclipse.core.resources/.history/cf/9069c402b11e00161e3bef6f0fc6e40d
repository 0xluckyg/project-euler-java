package problem2;

public class problem2 {
	public static void main(String[] args) {
		int x = 4000000;
		long fib1 = 0;
		long fib2 = 0;
		long fib3 = 0;
		long total = 0;
		
		for (int i = 0; i < x; i++ ) {
			if (i > i-2) {
				fib1 = i -1;
				fib2 = i;
				fib3 = fib1 + fib2;
			}
			
			if (fib3 % 2 == 0) {
				total += fib3;
			}
			
		}
		
		System.out.println(total);
		
	}
}
